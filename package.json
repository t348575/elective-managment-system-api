{
	"name": "elective-managment-system-api",
	"description": "An elective managment system",
	"version": "0.0.1",
	"author": "Joseph Subash Kanichai <kjosephsubash@gmail.com>",
	"license": "MIT",
	"main": "dist/server.js",
	"scripts": {
		"start": "yarn start:dev",
		"start:dev": "concurrently \"yarn build:tsoa && ts-node-dev --respawn ./src/server.ts --rs --watch 'src' --debug\" \"nodemon\"",
		"start:prod": "yarn node ./build/src/server.js",
		"build:routes": "tsoa routes",
		"build:swagger": "tsoa spec --host \"amrita-elective.tk\"",
		"build:tsoa": "yarn clean && yarn build:routes && yarn build:swagger && yarn copy",
		"build:prod": "yarn build:routes && yarn build:swagger && tsc && yarn copy",
		"build:prod:jenkins": "yarn build:routes && yarn build:swagger && tsc",
		"build": "yarn build:prod",
		"clean": "shx rm -rf build && shx mkdir build && shx mkdir build\\resources",
		"copy-jekins-api": "shx cp -r /var/lib/jenkins/workspace/elective-managment-system-api/ /server",
		"copy-flutter": "shx cp -r /var/lib/jenkins/workspace/elective_management_system/build/web/. /server/resources/public",
		"copy": "shx cp -r ./resources ./build",
		"copy-server": "shx cp -r /server/resources /server/build",
		"postinstall": "yarn build:prod:jenkins"
	},
	"dependencies": {
		"argon2": "^0.27.1",
		"body-parser": "^1.19.0",
		"cors": "^2.8.5",
		"express": "^4.17.1",
		"inversify": "^5.0.5",
		"inversify-binding-decorators": "^4.0.0",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^5.11.16",
		"mongoose-unique-validator": "^2.0.3",
		"morgan": "^1.10.0",
		"multer": "^1.4.2",
		"nodemailer": "^6.5.0",
		"querystring": "^0.2.1",
		"redis": "^3.0.2",
		"reflect-metadata": "^0.1.13",
		"swagger-ui-dist": "^3.43.0",
		"swagger-ui-express": "^4.1.6",
		"ts-node-dev": "^1.1.1",
		"tsoa": "^3.5.2",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"@types/argon2": "^0.15.0",
		"@types/body-parser": "^1.19.0",
		"@types/cors": "^2.8.10",
		"@types/express": "^4.17.11",
		"@types/inversify": "^2.0.33",
		"@types/inversify-binding-decorators": "^2.0.0",
		"@types/jsonwebtoken": "^8.5.0",
		"@types/mongoose": "^5.10.3",
		"@types/mongoose-unique-validator": "^1.0.4",
		"@types/morgan": "^1.9.2",
		"@types/multer": "^1.4.5",
		"@types/node": "^14.14.27",
		"@types/nodemailer": "^6.4.0",
		"@types/redis": "^2.8.28",
		"@types/swagger-ui-express": "^4.1.2",
		"@types/winston": "^2.4.4",
		"typescript": "^4.1.5"
	}
}
